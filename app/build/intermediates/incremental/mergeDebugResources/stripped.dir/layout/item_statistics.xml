    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipeRevealLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode="same_level"
        app:dragEdge="right"
         android:tag="layout/item_statistics_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           >
            <FrameLayout
                android:id="@+id/layout_recalculate"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_accept"
                android:layout_marginEnd="@dimen/_4sdp"
                >
                <ImageView
                    android:id="@+id/img_recalculate"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_recalculate"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_approve"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_accept"
                android:layout_marginEnd="@dimen/_4sdp"
                >
                <ImageView
                    android:id="@+id/img_approve"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_accept"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:background="@drawable/bg_tran"
                android:layout_marginBottom="@dimen/_3sdp"
                >

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_accept"                                                                        
                    android:layout_marginVertical="@dimen/_8sdp"

                     android:tag="binding_1"/>

                <TextView
                    android:id="@+id/tv_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Thang072024"                                                                   
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/img_state"
                    android:layout_centerVertical="true"
                     android:tag="binding_2"/>
                <RelativeLayout
                    android:id="@+id/layout_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    >
                    <TextView
                        android:id="@+id/tv_money_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/_110sdp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:text="100"                                                                                                                    
                        android:layout_toStartOf="@id/img_arrow"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                         android:tag="binding_3"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:maxWidth="@dimen/_110sdp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/red_orange"
                        android:textSize="@dimen/_12ssp"
                        android:text="100"                                                                                                                         
                        android:layout_toStartOf="@id/img_arrow"
                        android:layout_below="@id/tv_money_income"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                         android:tag="binding_4"/>
                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv_money_income"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_alignBottom="@id/tv_money"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_arrow_up"                                                                                                                                                                                                         
                         android:tag="binding_5"/>
                </RelativeLayout>

            </RelativeLayout>
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>

         