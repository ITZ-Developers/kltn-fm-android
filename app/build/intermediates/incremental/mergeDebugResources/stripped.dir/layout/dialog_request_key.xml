<?xml version="1.0" encoding="utf-8"?>
                                                                   

    
                 
                         
                                                          
           
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/dialog_request_key_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_download_file"
                android:layout_marginTop="@dimen/_12sdp"
                android:textColor="@color/approve"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/lato_bold"
                android:layout_gravity="center_horizontal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                >
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    style="@style/AppTvTitleForEditText"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black_full"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" *"
                    android:textColor="@color/red"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    style="@style/AppEditTextInput"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_40sdp"
                    android:layout_marginTop="0dp"
                    android:textColorHint="#C0C0C0"
                    android:tag="binding_1"           

                    />

                <RelativeLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="end|center_vertical"
                    android:tag="binding_2"                          
                    android:layout_marginEnd="@dimen/_5sdp"
                    >
                    <ImageView
                        android:id="@+id/img_show_password"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_eye_off"                                                                               
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_12sdp"
                         android:tag="binding_3"/>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                >

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_gray"
                    android:text="@string/cancel"
                    android:textColor="@color/black_gray"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:tag="binding_4"                  
                    android:layout_marginVertical="@dimen/_1sdp"
                    />

                <Button
                    android:id="@+id/btn_create_key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_aprrove"
                    android:textColor="@color/white"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:tag="binding_5"                   
                    android:layout_marginVertical="@dimen/_1sdp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

         