    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
         android:tag="layout/item_group_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:id="@+id/layout_main"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tran"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp"
            >
            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
