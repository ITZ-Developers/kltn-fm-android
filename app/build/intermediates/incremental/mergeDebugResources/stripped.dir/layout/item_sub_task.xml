    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode="same_level"
        app:dragEdge="right"
         android:tag="layout/item_sub_task_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:id="@+id/layout_change_state"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_pay"
                android:layout_marginEnd="@dimen/_4sdp"
                android:tag="binding_1"                                                                            
                android:layout_marginBottom="@dimen/_9sdp"
                >
                <ImageView
                    android:id="@+id/img_change_state"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_completed"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/layout_delete"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/bg_delete"
                android:tag="binding_2"                                            
                android:layout_marginBottom="@dimen/_9sdp"
                >
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_delete"
                    android:scaleType="fitXY"
                    android:layout_gravity="center" />
            </FrameLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <LinearLayout
                android:id="@+id/column_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_alignParentStart="true"
                >
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_circle"                                                                            
                    android:scaleType="centerCrop"
                     android:tag="binding_3"/>
                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/color_theme"
                    />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/column_state"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:background="@drawable/bg_tran"
                    android:elevation="@dimen/_4sdp"
                    >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black_full"
                        android:textSize="@dimen/_12ssp"
                        android:text="NguyenVanAwefwefwefewfwÆ°efwefwefwefew"                     
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:maxWidth="@dimen/_210sdp"
                         android:tag="binding_4"/>
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_processing"                                                                              
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/_12sdp"
                         android:tag="binding_5"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </RelativeLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>
         