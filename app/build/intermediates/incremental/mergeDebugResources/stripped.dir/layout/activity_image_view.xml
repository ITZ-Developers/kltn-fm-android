<?xml version="1.0" encoding="utf-8"?>
                                                                   

    
                 
                     
                                                         
                 
                    
                                                        
                                          
           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_full" android:tag="layout/activity_image_view_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="binding_1"                      
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:alpha="0.5"
            android:background="@color/black_full"
            android:tag="binding_2"                                         
            >

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:tag="binding_3"                                         
            android:elevation="@dimen/_8sdp"
            >
            <RelativeLayout
                android:id="@+id/layout_back"
                android:tag="binding_4"                   
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_image_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/_14ssp"
                android:paddingVertical="@dimen/_11sdp"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/layout_back"
                android:text="@string/image_name"
                android:maxWidth="@dimen/_200sdp"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>

    </FrameLayout>
         