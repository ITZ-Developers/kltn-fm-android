<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    
                 
                     
                                                                                   

                          
                                                                                  
                                                
                                          
                                                    
           

    <RelativeLayout
                                                 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
         android:tag="layout/activity_profile_update_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">
        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_header_title"
                                                   
                          />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_header"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_above="@+id/btn_update"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="binding_1"                    
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_7sdp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_60sdp"
                    >
                    <FrameLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:src="@drawable/bg_ava"
                            android:tag="binding_2"                             
                            android:layout_gravity="center_horizontal"
                            />
                        <FrameLayout
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_gravity="bottom"
                            android:background="#80696969"
                            android:tag="binding_3"                             
                            >
                            <ImageView
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:src="@drawable/ic_camera_choose"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:tag="binding_4"                             
                                />
                        </FrameLayout>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fullname"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_5"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="@string/input_fullname"
                    android:tag="binding_6"               
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birth_date"
                    style="@style/AppTvTitleForEditText"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    >
                    <EditText
                        android:id="@+id/pick_birth_day"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_35sdp"
                        style="@style/AppEditTextInput"
                        android:layout_marginTop="0dp"
                        android:tag="binding_7"                  
                        android:hint="dd/MM/yyyy"
                                                                                                                                                                                                         
                        android:textAlignment="center"
                        />
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/ic_pick_date"
                        android:tag="binding_8"                  
                        android:layout_toEndOf="@+id/pick_birth_day"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    style="@style/AppTvTitleForEditText"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"

                    android:hint="@string/input_address"
                    android:tag="binding_9"                               
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_10"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="email"                                                
                    android:enabled="false"
                    android:textColor="@color/color_hint"
                     android:tag="binding_11"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username_title"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_12"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_below="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"
                    android:text="username"                                                   
                    android:enabled="false"
                    android:textColor="@color/color_hint"
                     android:tag="binding_13"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_14"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_below="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"
                    android:text="123"                                                
                    android:enabled="false"
                    android:textColor="@color/color_hint"
                     android:tag="binding_15"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/department_name"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_16"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_department"
                    android:layout_below="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    style="@style/AppEditTextInput"
                    android:text="department_name"                                                          
                    android:enabled="false"
                    android:textColor="@color/color_hint"
                     android:tag="binding_17"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        style="@style/AppTvTitleForEditText"
                        android:layout_marginStart="@dimen/_2sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asterisk"                                   
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/_14ssp"
                         android:tag="binding_18"/>
                </LinearLayout>



                <FrameLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_password"
                    android:layout_marginTop="@dimen/_5sdp"
                    >

                    <EditText
                        android:id="@+id/edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        style="@style/AppEditTextInputPassWord"
                        android:hint="@string/input_password"
                        android:tag="binding_19"                 
                        android:inputType="textPassword"
                        />
                    <RelativeLayout
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="end|center_vertical"
                        android:tag="binding_20"                    
                        android:layout_marginEnd="@dimen/_5sdp"
                        >
                        <ImageView
                            android:id="@+id/img_show_password"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_eye_off"                                                                           
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/_12sdp"
                             android:tag="binding_21"/>
                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_update"
            style="@style/AppButtonStyle"
            android:layout_marginBottom="@dimen/_15sdp"
            android:tag="binding_22"                  
            android:text="@string/save"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

         