<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    
                 
                      
                                                                         
                 
                            
                            
                                                    
                                                   
           
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_key_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.chauthai.swipereveallayout.SwipeRevealLayout
            android:id="@+id/swipeRevealLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mode="same_level"
            app:dragEdge="right"
            android:layout_marginBottom="@dimen/_3sdp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <FrameLayout
                    android:id="@+id/layout_delete"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_delete"
                    >
                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_delete"
                        android:scaleType="fitXY"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layoutKey"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_tran"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_15sdp">
                    <ImageView
                        android:id="@+id/img_kind"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_server"                                                                   
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                         android:tag="binding_1"/>
                    <TextView
                        style="@style/text_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="NameKey"                     
                        android:layout_toEndOf="@+id/img_kind"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"

                         android:tag="binding_2"/>
                    <ImageView
                        android:id="@+id/img_read_more"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/ic_read_more_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="fitCenter"
                        />
                </RelativeLayout>
            </FrameLayout>

        </com.chauthai.swipereveallayout.SwipeRevealLayout>
    </FrameLayout>

         